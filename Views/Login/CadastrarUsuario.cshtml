@model CadastrarUsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar";
    @using DesafioVendasClientes.Enums;

}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["ErrorMessage"]
    </div>

}

<form asp-controller="Login" asp-action="Cadastrar" method="post">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">CADASTRO</h2>
                                <br />

                                <div class="form-outline form-white mb-4">
                                    <input type="text" asp-for="Nome" id="nome" class="form-control form-control-lg" />
                                    @Html.ValidationMessageFor(x => x.Nome)
                                    <label class="form-label" for="Nome">Nome</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="date" asp-for="Data_Nascimento" id="data-nascimento" class="form-control form-control-lg" />
                                    @Html.ValidationMessageFor(x => x.Data_Nascimento)
                                    <label class="form-label" for="Nome">Data de nascimento</label>
                                </div>


                                <div class="form-outline form-white mb-4">
                                    <input type="email" asp-for="Email" id="typeEmailX" class="form-control form-control-lg" />
                                    @Html.ValidationMessageFor(x => x.Email)
                                    <label class="form-label" for="typeEmailX">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" asp-for="Senha" id="typePasswordX" class="form-control form-control-lg" />
                                    @Html.ValidationMessageFor(x=>x.Senha)
                                    <label class="form-label" for="typePasswordX">Senha</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" asp-for="ConfirmarSenha" id="typePasswordX" class="form-control form-control-lg" />
                                    @Html.ValidationMessageFor(x => x.ConfirmarSenha)
                                    <label class="form-label" for="typePasswordX">Confirme a senha</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label">Tipo de perfil</label>
                                    <select class="form-control" asp-for="Perfil">
                                        <option value="0">Selecione</option>
                                        <option value="@PerfilEnum.Admin">Administrador</option>
                                        <option value="@PerfilEnum.Padrao">Padrão</option>
                                    </select>
                                </div>

                                <button class="btn btn-primary" type="submit">Cadastrar</button>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</form>


