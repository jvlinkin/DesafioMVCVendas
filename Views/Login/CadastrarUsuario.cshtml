@model CadastrarUsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar";
    @using DesafioVendasClientes.Enums;

}



<form asp-controller="Login" asp-action="CadastrarUsuario" method="post">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    <button type="button" class="btn btn-primary btn-sm close-alert" arial-label="Close">X</button>
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                                    @TempData["ErrorMessage"]
                                </div>

                            }

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">CADASTRO</h2>
                            <br />

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="Nome">Nome</label>
                                <input type="text" asp-for="Nome" id="nome" class="form-control form-control-lg" />
                                @Html.ValidationMessageFor(x => x.Nome)
                                <br />

                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="Nome">Data de nascimento</label>
                                <input type="date" asp-for="Data_Nascimento" id="data-nascimento" class="form-control form-control-lg" />
                                @Html.ValidationMessageFor(x => x.Data_Nascimento)
                                <br />

                            </div>


                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="typeEmailX">Email</label>
                                <input type="email" asp-for="Email" id="typeEmailX" class="form-control form-control-lg" />
                                @Html.ValidationMessageFor(x => x.Email)
                                <br />

                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="typePasswordX">Senha</label>
                                <input type="password" asp-for="Senha" id="typePasswordX" class="form-control form-control-lg" />
                                @Html.ValidationMessageFor(x => x.Senha)
                                <br />

                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="typePasswordX">Confirmação de senha</label>
                                <input type="password" asp-for="ConfirmarSenha" id="typePasswordX" class="form-control form-control-lg" />
                                
                                @Html.ValidationMessageFor(x => x.ConfirmarSenha)
                                <br>

                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label">Tipo de perfil</label>
                                <select class="form-control" asp-for="Perfil">
                                    <option value="0">Selecione</option>
                                    <option value="@PerfilEnum.Admin">Administrador</option>
                                    <option value="@PerfilEnum.Padrao">Padrão</option>
                                </select>
                                
                                @Html.ValidationMessageFor(x => x.Perfil)
                            </div>
                            <br />
                            <br />

                            <button class="btn btn-primary btn-block" type="submit">Cadastrar</button>
                            <a class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
                        </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</form>


